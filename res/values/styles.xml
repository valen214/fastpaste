<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activity_main">

    </style>
    <style name="activity_main_number_input">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:singleLine">true</item>
        <!--
        <item name="android:hint">@string/inclusive</item>
        -->
        <item name="android:textSize">32sp</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/half_trans</item>
    </style>
    <style name="activity_main_clear_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@color/half_trans</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/clear</item>
    </style>
</resources>